token: "telegram_token"
settings:
  max_retries: 5
  retry_delay: 3
  max_messages_per_conversation: 100
  max_total_messages: 1000
  max_age_hours: 24
  cache_maintenance_interval: 3600
  logging_level: "error"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
  log_file_path: "telegram_bot.log"
  log_format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  max_log_size: 5242880
  backup_count: 3
  privacy:
      retention_direct_messages: 30 # (in days)
      retention_group_messages: 14
      policy_url: "https://example.com/privacy-policy"
      welcome_message_direct: "Welcome! I'm {bot_name}. I store message content temporarily for {retention_direct_messages} days to provide my services. For details, see our privacy policy: {policy_url}\n\nContinue chatting to agree to these terms."
      welcome_message_group: "Hello! I'm {bot_name}, added to this group. I store messages for {retention_group_messages} days. Group members can use /privacy to learn more or /deletedata to remove their data."
socketio:
  host: "0.0.0.0"
  port: 8080
  cors_allowed_origins: "*"
