adapter:
  adapter_type: "shell"
  connection_check_interval: 300  # Seconds to check connection
  workspace_directory: "/home/user/"
  session_max_lifetime: 1 # In hours
  command_max_lifetime: 0.5 # In hours
  max_output_size: 500 # In characters
  begin_output_size: 200 # In characters
  end_output_size: 300 # In characters
resources_monitoring:
  cpu_percent_limit: 50
  memory_mb_limit: 50
  disk_mb_limit: 50
  check_interval: 20 # In seconds
logging:
  logging_level: "info"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
  log_file_path: "adapters/shell_adapter/logs/development.log"
  log_format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  max_log_size: 5242880
  backup_count: 3
socketio:
  host: "127.0.0.1"
  port: 8087
  cors_allowed_origins: "*"
